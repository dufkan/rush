WHITESPACE = _{ " " | "\t" | "\n" }
separator = { ";" | "&&" | "||" }

word = @{ (!(WHITESPACE | separator) ~ ANY)+ }
var = @{ LETTER ~ (LETTER | NUMBER)* }

assign = ${ var ~ "=" ~ word }
execute = { word+ }

command = { (assign | execute) }
line = _{ SOI ~ command ~ (separator ~ command)* ~ ";"? ~ EOI }