WHITESPACE = _{ " " | "\t" | "\n" }
separator = { ";" | "&&" | "||" }
redirect = { "|" | ">" | "<" }
word = @{ (!(WHITESPACE | separator | redirect) ~ ANY)+ }
var = @{ LETTER ~ (LETTER | NUMBER)* }

assign = ${ var ~ "=" ~ word }
execute = { word ~ (redirect? ~ word)* }

command = { (assign | execute) }
line = _{ SOI ~ command ~ (separator ~ command)* ~ ";"? ~ EOI }